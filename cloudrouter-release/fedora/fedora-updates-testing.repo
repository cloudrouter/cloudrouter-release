[updates-testing]
name=Fedora 22 - $basearch - Test Updates
failovermethod=priority
#baseurl=http://download.fedoraproject.org/pub/fedora/linux/updates/testing/22/$basearch/
metalink=https://mirrors.fedoraproject.org/metalink?repo=updates-testing-f22&arch=$basearch
enabled=0
gpgcheck=1
metadata_expire=6h
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-22-$basearch
skip_if_unavailable=False

